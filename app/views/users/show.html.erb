<title>My Account | Grocer Store</title>
<div class="container">
	<div class="row">
		<div class="col-sm-3"></div>
		<div class="col-sm-6 text-center thumbnail">
			<h2>My Account</h2>
			<h4>Welcome to My Account. Here you can edit your account details</h4>
			<br/>
			<h3>Current Details: </h3>
			<br/>
			<h4><label><i> First Name: </i></label> <%= @user.fname%></h4>
			<h4><label><i> Last Name: </i></label> <%= @user.lname%></h4>
			<h4><label><i> D.O.B: </i></label> <%= @user.dob %></h4>
			<br/>
			<%= link_to "Edit My Details", edit_user_registration_path(@user), class:"btn btnRed" %>
		</div>
		<div class="col-sm-3"></div>
	</div>
</div>