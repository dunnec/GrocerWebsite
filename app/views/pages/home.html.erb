<title>Home | Grocer Store</title>
<div id="homePageSlider" class="carousel slide"  data-ride="carousel" data-keyboard="true">
          <ol class="carousel-indicators">
            <li data-target="#homePageSlider" data-slide-to="0" class="active"></li>
            <li data-target="#homePageSlider" data-slide-to="1"></li>
            <li data-target="#homePageSlider" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner" role="listbox">
            <div class="item active">
            	<%= image_tag("overlay.jpeg", :alt => "rss feed" , id:"overlay" )%>
                <%= image_tag("1.jpeg", :alt => "rss feed") %>
              	<div class="carousel-caption">
              		<h1>Grocery Store</h1>
              		<h4 id="hide">All Your Favourite Groceries in one place</h4>
              		<%= link_to "Browse Products", products_path, class:"btn btnRed" %>
              	</div> 
            </div>

            <div class="item">
            	<%= image_tag("overlay.jpeg", :alt => "rss feed" , id:"overlay" )%>
              	<%= image_tag("2.jpeg", :alt => "rss feed") %>
             	<div class="carousel-caption">
             		<h1>You Order. We Deliver</h1>
                  <h4 id="hide">View Delivery Area</h4>
                  <%= link_to "Delivery", pages_delivery_path, class:"btn btnRed" %>
              	</div>            
            </div> 

            <div class="item">
              <%= image_tag("overlay.jpeg", :alt => "rss feed" , id:"overlay" )%>
              <%= image_tag("3.jpeg", :alt => "rss feed") %> 
              <div class="carousel-caption">
                <h1>Become a member</h1>
                  <h4 id="hide">Register, and use your logiin for quicker transactions</h4>
                  <%= link_to "Register",  new_user_registration_path, class:"btn btnRed" %>
              </div>            
            </div> 
          <a class="left carousel-control" href="#homePageSlider" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#homePageSlider" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
      <br/>
      <br/>
      <br/>
</div>

