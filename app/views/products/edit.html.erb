<title>Edit <%= @product.title %>| Grocery Store</title>
<div class="container shadow">
	<h1>Edit Product</h1>
		<%= simple_form_for @product, :html => { :multipart => true } do |f| %>
			<%= f.select :category_id, @categories %>
		  <%= f.input :title, label: "Product Name" %>
		  <%= f.input :price %>
		  <%= f.input :desc %>
		  <%= f.input :image_url %>
		  <br/>
		  <br/>
		  <%= f.button :submit %>
		<% end %>
	<%= link_to "Back", products_path, class:"btn btnRed" %>
</div>